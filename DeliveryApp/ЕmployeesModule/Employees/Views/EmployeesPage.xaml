<Page x:Class="DeliveryApp.EmployeesModule.Employees.Views.EmployeesPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ЕmployeesModule.Employees.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModel:EmployeesViewModel}"
        Title="OrdersPage" Name="ordersPage">

    <Page.Resources>
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Page.Resources>
    
    
    <Grid Background="Transparent">
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <ListBox Grid.Row="0"
                 ItemsSource="{Binding Employee}"
                 HorizontalContentAlignment="Stretch"
                 SelectionMode="Extended">

            <ListBox.ItemTemplate>
                
                <DataTemplate>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Grid.Resources>
                            <Style TargetType="TextBlock">
                                <Setter Property="Margin" Value="5"/>
                                <Setter Property="TextAlignment" Value="Justify"/>
                            </Style>
                        </Grid.Resources>

                        <TextBlock Grid.Column="1" Text="{Binding Employee.EmployeeName}"/>
                        <TextBlock Grid.Column="2" Text="{Binding Employee.OrdersComplete}"/>

                    </Grid>
                    
                    
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        
        <Grid Grid.Row="1">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    Content="Добавить"/>
            <Button Grid.Column="1"
                    Content="Удалить"/>

        </Grid>
    </Grid>
    
    
</Page>
