<Page x:Class="DeliveryApp.Orders.Views.OrdersPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:ЕmployeesModule.Employees.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModel:EmployeesViewModel}"
        Title="OrdersPage" Name="ordersPage">

    <Page.Resources>
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Page.Resources>
    
    
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <ListBox Grid.Row="0"
                 HorizontalContentAlignment="Stretch"
                 >
        </ListBox>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0">Редактировать</Button>
            <Button Grid.Column="1">Добавить</Button>
        </Grid>
    </Grid>
    
    
</Page>
